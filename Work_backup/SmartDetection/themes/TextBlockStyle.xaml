<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PowerData.themes">
    <Style x:Key="ButtonOne" TargetType="TextBlock">
        <Setter Property="Background" Value="#FFEBF2F9"></Setter>
        <!--<Setter Property="BorderBrush"Value="#FFEBF2F9"></Setter>-->
        <Setter Property="Foreground" Value="#FF3CABEF"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="Black"></Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    <!--记住密码和自动登录-->
    <Style x:Key="ButtonTwo" TargetType="TextBlock">
        <Setter Property="Background" Value="#FFEBF2F9"></Setter>
        <!--<Setter Property="BorderBrush"Value="#FFEBF2F9"></Setter>-->
        <Setter Property="Foreground" Value="Black"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver"  Value="True">
                <Setter Property="Foreground" Value="#0089ff"></Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>