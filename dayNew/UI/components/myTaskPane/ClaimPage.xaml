<UserControl x:Class="SmartDetection.UI.components.myTaskPane.ClaimPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartDetection.UI.components.myTaskPane"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
     >

    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Label>探伤任务认领</Label>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="线名"></Label>
            <Label Grid.Column="1" Content="京沪高速"></Label>
            <Label Grid.Column="2" Content="线别"></Label>
            <Label Grid.Column="3" Content="线别"></Label>
            <Label Grid.Column="4" Content="行别"></Label>
            <Label Grid.Column="5" Content="上行"></Label>
            <Label Grid.Column="6" Content="探伤班组"></Label>
            <Label Grid.Column="7" Content="探伤四工班"></Label>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="工作日期"></Label>
            <Label Grid.Column="1" Content="2023年3月6日"></Label>
            <Label Grid.Column="2" Content="起点里程（Km)"></Label>
            <Label Grid.Column="3" Content="1000.455"></Label>
            <Label Grid.Column="4" Content="终点里程（Km)"></Label>
            <Label Grid.Column="5" Content="1300.751"></Label>
            <Label Grid.Column="6" Content="检测区间"></Label>
            <Label Grid.Column="7" Content="何家湾Ⅱ场～封浜～张家港通沪场"></Label>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="小曲线半径限速"></Label>
            <Grid Grid.Column="1">
                <DataGrid>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="线名" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="行别" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="起点里程（km)" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="终点里程（km)" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="曲线方向" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="曲线半径(m)" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="曲线长度(m)" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="限速" Width="1*"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="超7亿吨限速"></Label>
            <Grid Grid.Column="1">
                <DataGrid>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="线名" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="行别" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="起点里程（km)" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="终点里程（km)" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="曲线方向" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="曲线半径(m)" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="曲线长度(m)" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="限速" Width="1*"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="监控伤损"></Label>
            <Grid Grid.Column="1">
                <DataGrid>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="检测顺序" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="年" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="月" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="日" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="工务段" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="线名" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="线别" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="股别" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="里程" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="伤损类型" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="伤损位置" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="伤损具体情况" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="伤损等级" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="复核情况" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="采取措施" Width="1*"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="关注伤损"></Label>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Content="南京-里湖西（关注伤损）" HorizontalAlignment="Center"></Label>
                <DataGrid Grid.Row="1">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="序号" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="段名" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="线名" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="行别" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="股别" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="里程" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="轨头方向" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="伤损类型" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="伤损位置" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="参考尺寸mm" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="备注" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="发现人/日期" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="复核情况" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="复核人/日期" Width="1*"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
        <Grid Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="重点地段"></Label>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Content="2022年探伤防断重点地段" HorizontalAlignment="Center"></Label>
                <DataGrid Grid.Row="1">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="序号" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="线名" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="行别" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="里程（km)" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="位置" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="长度（km)" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="薄弱原因" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="线路类型" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="交路" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="检测计划" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="区间" Width="1*"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
        <Grid Grid.Row="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Content="认领" Width="100" Height="30"></Button>
            <Button Content="取消" Grid.Column="1" Width="100" Height="30"></Button>
        </Grid>
    </Grid>
</UserControl>
