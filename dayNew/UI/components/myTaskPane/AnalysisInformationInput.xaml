<UserControl x:Class="SmartDetection.UI.components.myTaskPane.AnalysisInformationInput"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartDetection.UI.components.myTaskPane"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >

    <Grid Background="WhiteSmoke" x:Name="AlarmInputList">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Content="探伤报警录入列表"></Label>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="4*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Content="工务段" VerticalAlignment="Center" HorizontalAlignment="Right"></Label>
                <ComboBox Grid.Column="1" VerticalAlignment="Center"/>
                <Label Content="工务段"  Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right"></Label>
                <ComboBox Grid.Column="3" VerticalAlignment="Center"/>
                <Label Content="工务段"  Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Right"></Label>
                <ComboBox Grid.Column="5" VerticalAlignment="Center"/>
                <Button Content="录入伤损报警" Grid.Column="6" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="Alarm_Input" Margin="198,0,0,14"></Button>
            </Grid>
            <Grid Grid.Row="2">
                <DataGrid x:Name="inputTable" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="车号" Binding="{Binding number}"  Width="*"></DataGridTextColumn>
                        <DataGridTextColumn Header="年"  Width="*"></DataGridTextColumn>
                        <DataGridTextColumn Header="月"  Width="*"></DataGridTextColumn>
                        <DataGridTextColumn Header="日"  Width="*"></DataGridTextColumn>
                        <DataGridTextColumn Header="工务段" Width="*"></DataGridTextColumn>
                        <DataGridTextColumn Header="线名" Width="*"></DataGridTextColumn>
                        <DataGridTextColumn Header="行别" Width="*"></DataGridTextColumn>
                        <DataGridTextColumn Header="股别" Width="*"></DataGridTextColumn>
                        <DataGridTextColumn Header="里程" Width="*"></DataGridTextColumn>
                        <DataGridTextColumn Header="轨头" Width="*"></DataGridTextColumn>
                        <DataGridTextColumn Header="伤损类型" Width="*"></DataGridTextColumn>
                        <DataGridTextColumn  Width="*" Header="伤损位置"></DataGridTextColumn>
                        <DataGridTextColumn  Width="*" Header="参考"></DataGridTextColumn>
                        <DataGridTextColumn  Width="*" Header="伤损具体情况"></DataGridTextColumn>
                        <DataGridTextColumn  Width="*" Header="伤损等级"></DataGridTextColumn>
                        <DataGridTemplateColumn Header="操作" Width="3*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" Content="台账信息" Width="80" Click="click_ledgerInformation"></Button>
                                        <Button Grid.Column="1"  Content="伤损对比" Width="80"></Button>
                                        <Button Grid.Column="2" Content="疑似对比" Width="80"></Button>
                                        <Button Grid.Column="3" Content="删除" Width="80"></Button>
                                    </Grid>

                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
