<UserControl
    x:Class="SmartDetection.UI.components.importPlanCom.PlannedTaskList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SmartDetection.UI.components.importPlanCom"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="50">
            </RowDefinition>
            <RowDefinition Height="50">
            </RowDefinition>
            <RowDefinition Height="*">
            </RowDefinition>
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            VerticalContentAlignment="Center"
            Content="探伤计划任务列表">
        </Label>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*">
                </ColumnDefinition>
                <ColumnDefinition Width="1*">
                </ColumnDefinition>
                <ColumnDefinition Width="1*">
                </ColumnDefinition>
                <ColumnDefinition Width="1*">
                </ColumnDefinition>
                <ColumnDefinition Width="1*">
                </ColumnDefinition>
                <ColumnDefinition Width="1*">
                </ColumnDefinition>
                <ColumnDefinition Width="1*">
                </ColumnDefinition>
                <ColumnDefinition Width="1*">
                </ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                VerticalAlignment="Center"
                Content="工作日期">
            </Label>
            <TextBox Grid.Column="1" VerticalAlignment="Center">
            </TextBox>
            <Label
                Grid.Column="2"
                VerticalAlignment="Center"
                Content="探伤班组">
            </Label>
            <TextBox Grid.Column="3" VerticalAlignment="Center">
            </TextBox>
            <Label
                Grid.Column="4"
                VerticalAlignment="Center"
                Content="线名">
            </Label>
            <TextBox Grid.Column="5" VerticalAlignment="Center">
            </TextBox>
            <Label
                Grid.Column="6"
                VerticalAlignment="Center"
                Content="工作日期">
            </Label>
            <TextBox Grid.Column="7" VerticalAlignment="Center">
            </TextBox>
        </Grid>
        <Grid Grid.Row="2">
            <DataGrid Name="PlaneTaskList" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding workDate}" Header="工作日期">
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="工作内容">
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="线名">
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="行别">
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="起点里程（Km)">
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="终点里程(Km)">
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="钢轨（Km)">
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="探伤班组">
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="检测区间">
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="回放人员">
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="认领状态">
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="操作">
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
