<Application x:Class="SmartDetection.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SmartDetection"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skin\IconDataDictionary.xaml"/>
                <ResourceDictionary Source="Skin\BaseWindowTheme.xaml"/>
                <ResourceDictionary Source="Skin/ControlStyle.xaml"/>
                <ResourceDictionary Source="themes/ButtonStyle.xaml"/>
                <ResourceDictionary Source="themes/ImageStyle.xaml"/>
                <ResourceDictionary Source="themes/TextBlockStyle.xaml"/>
                <ResourceDictionary Source="themes/TextBoxStyle.xaml"/>
                <ResourceDictionary Source="themes/CheckBoxStyle.xaml"/>
                <ResourceDictionary Source="themes/TabControlStyle.xaml"/>
                <ResourceDictionary Source="themes/TabItemStyle.xaml"/>
               </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type TextElement }">
                <Setter Property="FontFamily" Value="微软雅黑"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>
            <Style TargetType="{x:Type TextBlock }">
                <Setter Property="FontFamily" Value="微软雅黑"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>
        </ResourceDictionary>


    </Application.Resources>
</Application>
