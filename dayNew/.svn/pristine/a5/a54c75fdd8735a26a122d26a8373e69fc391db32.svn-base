<UserControl
    x:Class="SmartDetection.UI.components.importPlanCom.UploadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SmartDetection.UI.components.importPlanCom"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="50">
            </RowDefinition>
            <RowDefinition Height="50">
            </RowDefinition>
            <RowDefinition Height="50">
            </RowDefinition>
            <RowDefinition Height="50">
            </RowDefinition>
            <RowDefinition Height="50">
            </RowDefinition>
            <RowDefinition Height="50">
            </RowDefinition>
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            VerticalAlignment="Center"
            Content="探伤计划导入" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*">
                </ColumnDefinition>
                <ColumnDefinition Width="2*">
                </ColumnDefinition>
                <ColumnDefinition Width="1*">
                </ColumnDefinition>
                <ColumnDefinition Width="2*">
                </ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label VerticalAlignment="Center" Content="铁路局">
            </Label>
            <Label
                Grid.Column="1"
                VerticalAlignment="Center"
                Content="上海铁路局">
            </Label>
            <Label
                Grid.Column="2"
                VerticalAlignment="Center"
                Content="探伤车间">
            </Label>
            <Label
                Grid.Column="3"
                VerticalAlignment="Center"
                Content="上海大机探伤车">
            </Label>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*">
                </ColumnDefinition>
                <ColumnDefinition Width="2*">
                </ColumnDefinition>
                <ColumnDefinition Width="1*">
                </ColumnDefinition>
                <ColumnDefinition Width="2*">
                </ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label VerticalAlignment="Center" Content="工务段">
            </Label>
            <Label
                Grid.Column="1"
                VerticalAlignment="Center"
                Content="上海大型养路机">
            </Label>
            <Label
                Grid.Column="2"
                VerticalAlignment="Center"
                Content="探伤工区">
            </Label>
            <Label
                Grid.Column="3"
                VerticalAlignment="Center"
                Content="上海大机探伤车">
            </Label>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*">
                </ColumnDefinition>
                <ColumnDefinition Width="2*">
                </ColumnDefinition>
                <ColumnDefinition Width="1*">
                </ColumnDefinition>
                <ColumnDefinition Width="2*">
                </ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label VerticalAlignment="Center" Content="探伤班组：">
            </Label>
            <ComboBox
                Name="flaw_detection_team"
                Grid.Column="1"
                Width="100"
                Height="35"
                HorizontalAlignment="Left"
                DisplayMemberPath="dictName"
                SelectedValuePath="dictCode">
            </ComboBox>
        </Grid>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*">
                </ColumnDefinition>
                <ColumnDefinition Width="2*">
                </ColumnDefinition>
                <ColumnDefinition Width="1*">
                </ColumnDefinition>
                <ColumnDefinition Width="2*">
                </ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label VerticalAlignment="Center" Content="探伤班组：">
            </Label>
            <ComboBox
                Name="flaw_detection_plan"
                Grid.Column="1"
                Width="100"
                Height="35"
                HorizontalAlignment="Left"
                DisplayMemberPath="dictName"
                SelectedValuePath="dictCode">
            </ComboBox>
        </Grid>
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*">
                </ColumnDefinition>
                <ColumnDefinition Width="1*">
                </ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Width="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="importPlan"
                Content="导入" />
            <Button
                Grid.Column="1"
                Width="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="取消" />
        </Grid>
    </Grid>
</UserControl>
