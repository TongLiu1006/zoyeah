<UserControl x:Class="SmartDetection.UI.components.myTaskPane.LedgerInformation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartDetection.UI.components.myTaskPane"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >

    <Grid Background="WhiteSmoke" Name="LedgerLise">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Content="探伤台账列表" VerticalAlignment="Center"></Label>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="3*"></ColumnDefinition>

                </Grid.ColumnDefinitions>
                <Label Content="工作日期" VerticalAlignment="Center" HorizontalAlignment="Right"></Label>
                <TextBox Grid.Column="1" VerticalAlignment="Center"></TextBox>
                <Label  Grid.Column="2" Content="探伤班组" VerticalAlignment="Center" HorizontalAlignment="Right"></Label>
                <ComboBox Grid.Column="3" VerticalAlignment="Center"></ComboBox>
                <Label  Grid.Column="4" Content="线名" VerticalAlignment="Center" HorizontalAlignment="Right"></Label>
                <ComboBox Grid.Column="5" VerticalAlignment="Center"></ComboBox>
                <Label  Grid.Column="6" Content="台账类型" VerticalAlignment="Center" HorizontalAlignment="Right"></Label>
                <ComboBox Grid.Column="7" VerticalAlignment="Center"></ComboBox>
                <Button  Grid.Column="8" Content="伤损复核导入" VerticalAlignment="Center" HorizontalAlignment="Right"></Button>
            </Grid>
            <Grid Grid.Row="2">
                <DataGrid x:Name="dataGrid_dataList" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="工作日期" Width="1*" Binding="{Binding time}"></DataGridTextColumn>
                        <DataGridTextColumn Header="工作内容" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="线名" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="线别" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="台账类型" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="起点里程（Km)" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="终点里程(Km)" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="复核状态" Width="1*"></DataGridTextColumn>
                        <DataGridTextColumn Header="探伤班组" Width="1*"></DataGridTextColumn>
                        <DataGridTemplateColumn Header="操作" Width="1*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Button Content="明细" Click="click_detail"></Button>
                                        <Button Content="伤损B型图"></Button>
                                        <Button Content="伤损复核"></Button>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
