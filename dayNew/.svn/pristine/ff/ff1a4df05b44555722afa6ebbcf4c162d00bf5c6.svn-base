<UserControl x:Class="SmartDetection.UI.config.CurvePane"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:SmartDetection"
        mc:Ignorable="d"
       
        Height="540" Width="750">
  
    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Margin="5,5,5,0" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" HorizontalContentAlignment="Right" Width="60" FontSize="18" VerticalContentAlignment="Center">线路</Label>
            <ComboBox x:Name="lines" Grid.Column="1" VerticalContentAlignment="Center"  Height="40" FontSize="18" SelectionChanged="line_SelectionChanged"></ComboBox>
            <!--<CheckBox x:Name="updownBox" HorizontalAlignment="Left" BorderThickness="1,1,0,1" Margin="10,2,0,0" Style="{DynamicResource CheckBoxSwitchStyle}" VerticalAlignment="Center" FontSize="14"   Content="下行" Tag="上行" IsChecked="True"  Click="doCheckBoxClick"/>-->

        </Grid>
        <Grid Grid.Row="1">
              <DataGrid  Height="450" Width="710" CanUserAddRows="false"  Background="White" AutoGenerateColumns="False" ItemsSource="{Binding}" FontSize="14" HorizontalContentAlignment="Center" Name="CurveData" 
                       BeginningEdit="BeginningEdit" CellEditEnding="CellEditEnding" SelectionUnit="FullRow" SelectionChanged="SelectionChanged" VerticalScrollBarVisibility="Visible"> 
                       
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Height" Value="35" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="线号" Binding="{Binding lineNo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Width="90" />
                            <DataGridTextColumn Header="行别" Binding="{Binding updown, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="80"></DataGridTextColumn>
                            <DataGridTextColumn Header="起始里程" Binding="{Binding sPoint, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120"></DataGridTextColumn>
                            <DataGridTextColumn Header="结束里程" Binding="{Binding ePoint, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120"></DataGridTextColumn>
                            <DataGridTextColumn Header="曲线类型" Binding="{Binding lr, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="90"></DataGridTextColumn>
                            <DataGridTextColumn Header="曲线半径" Binding="{Binding radius, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></DataGridTextColumn>
                            <DataGridTextColumn Header="自定义限速" Binding="{Binding mySpeed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
               
        </Grid>
    </Grid>
</UserControl>
